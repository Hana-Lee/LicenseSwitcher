<Window x:Class="LicenseSwitcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LicenseSwitcher"
        mc:Ignorable="d"
        Title="License Switcher" Height="360" Width="420" ResizeMode="NoResize" Visibility="Visible">
    <DockPanel>
        <Menu x:Name="MainManu" 
              VerticalAlignment="Top" DockPanel.Dock="Top"
              Height="20">
            <MenuItem Header="File">
                <MenuItem Header="Save Settings"/>
                <MenuItem Header="Exit"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About"/>
                <MenuItem Header="Show Help"/>
            </MenuItem>
        </Menu>
        <Frame x:Name="MainFrame"/>
    </DockPanel>
</Window>
